<div class="sidenav">
   <div class="login-main-text">
      <h2>ProfitView</h2>
      <p>Login or register from here to access.</p>
   </div>
</div>
<div class="container-fluid height-inherit" id='login-container'>
  <div class="row height-inherit">
    <div class="col-md-6 col-sm-7 col-12 lgn-bg-col height-inherit">
      <div class='login-bg-cont height-inherit d-flex align-items-center justify-content-center'>
        <div class='cloud-work-site-text'>
          <h2>ProfitView</h2>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-sm-5 col-12 frm-bg-col height-inherit d-flex align-items-center pt-2">
      <div class="relative dark-theme-bloc-xs">
        <div class="login-form-cont">
          <div class="form-group">
            <h2>Edit <%= resource_name.to_s.humanize %></h2>
          </div>

            <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, class: "login-form-tag"}) do |f| %>
              <%= render "devise/shared/error_messages", resource: resource %>

              <div class="field pt-3">
                <%= f.label :name %><br />
                <%= f.text_field :name, autofocus: true, autocomplete: "name", class: "form-control" %>
              </div>

              <div class="field pt-3">
                <%= f.label :email %><br />
                <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "form-control" %>
              </div>

              <div class="field pt-3">
                <%= f.label :mobile %><br />
                <%= f.text_field :mobile, autofocus: true, autocomplete: "mobile", class: "form-control" %>
              </div>

              <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
                <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
              <% end %>

              <div class="field pt-3">
                <%= f.label :password %> <i>(leave blank if you don't want to change it)</i><br />
                <%= f.password_field :password, autocomplete: "new-password", class: "form-control" %>
                <% if @minimum_password_length %>
                  <small><%= @minimum_password_length %> characters minimum</small>
                <% end %>
              </div>

              <div class="field pt-3">
                <%= f.label :password_confirmation %><br />
                <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "form-control" %>
              </div>

              <div class="field pt-3">
                <%= f.label :current_password %> <i>(we need your current password to confirm your changes)</i><br />
                <%= f.password_field :current_password, autocomplete: "current-password", class: "form-control" %>
              </div>

              <h3 class="pt-3">My Organization Detail</h3>

              <%= f.fields_for :organization, (resource.organization || Organization.new) do |ff| %>
                <div class="field pt-3">
                  <%= ff.label "name" %><br />
                  <%= ff.text_field "name", autofocus: true, autocomplete: "name", class: "form-control" %>
                </div>

                <div class="field pt-3">
                  <%= ff.label "vat (%)" %><br />
                  <%= ff.text_field "vat", autofocus: true, autocomplete: "vat", class: "form-control" %>
                </div>

                <div class="field pt-3">
                  <%= ff.label "registration_no" %><br />
                  <%= ff.text_field "registration_no", autofocus: true, autocomplete: "registration_no", class: "form-control" %>
                </div>

                <div class="field pt-3">
                  <%= ff.label "bank_account_1" %><br />
                  <%= ff.text_field "bank_account_1", autofocus: true, autocomplete: "bank_account_1", class: "form-control" %>
                </div>

                <div class="field pt-3">
                  <%= ff.label "bank_account_2" %><br />
                  <%= ff.text_field "bank_account2", autofocus: true, autocomplete: "bank_account2", class: "form-control" %>
                </div>

                <div class="field pt-3">
                  <%= ff.label "bank_name" %><br />
                  <%= ff.text_field "bank_name", autofocus: true, autocomplete: "bank_name", class: "form-control" %>
                </div>

                <div class="field pt-3">
                  <%= ff.label "street" %><br />
                  <%= ff.text_field "street", autofocus: true, autocomplete: "street", class: "form-control" %>
                </div>

                <div class="field pt-3">
                  <%= ff.label "no" %><br />
                  <%= ff.text_field "no", autofocus: true, autocomplete: "no", class: "form-control" %>
                </div>

                <div class="field pt-3">
                  <%= ff.label "zip" %><br />
                  <%= ff.text_field "zip", autofocus: true, autocomplete: "zip", class: "form-control" %>
                </div>

                <div class="field pt-3">
                  <%= ff.label "county" %><br />
                  <%= ff.text_field "county", autofocus: true, autocomplete: "county", class: "form-control" %>
                </div>

                <div class="field pt-3">
                  <%= ff.label "country" %><br />
                  <%= ff.text_field "country", autofocus: true, autocomplete: "country", class: "form-control" %>
                </div>
              <% end %>

              <div class="actions pt-2 pb-5">
                <%= f.submit "Update", class: "pink-btn" %>
                <small><%= link_to "Back", :back %></small>
              </div>

            <% end %>
        </div>
      </div>
    </div>
  </div>
</div>
