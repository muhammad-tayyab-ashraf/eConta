<!DOCTYPE html>
<html>
  <head>
    <title>ProfitView</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <% if notice %>
      <p class="alert alert-success"><%= notice %></p>
    <% end %>
    <% if alert %>
      <p class="alert alert-danger"><%= alert %></p>
    <% end %>

    <div id="main-container" class="height-inherit">
      <div class='height-inherit'>
        <div id="main-content">
          <% unless params["controller"] == "devise/sessions" || params["controller"] == "devise/registrations" || params["controller"] == "devise/passwords" %>
            <%= render partial: 'layouts/header'%>
          <% end %>
          <%= yield %>
        </div>
      </div>
    </div>
  </body>
</html>
